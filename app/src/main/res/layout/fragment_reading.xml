<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Views.readingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/reading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:text="Reading: "
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/reading_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/reading_tv"
        android:layout_above="@+id/readingSaveButton"
        android:text="val"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/readingSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reading_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16sp"
        android:text=" SAVE  "
        android:textSize="16sp" />

    <Button
        android:id="@+id/readingCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reading_tv"
        android:layout_marginStart="16sp"
        android:text="CANCEL"
        android:textSize="16sp" />

    <Button
        android:id="@+id/whenToDriveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reading_tv"
        android:layout_marginTop="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:text="When Can I Drive?"
        android:textSize="16sp" />

</RelativeLayout>