<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Views.readingFragment"
    >

    <TextView
        android:id="@+id/reading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Live BAC Reading: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reading_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/reading_tv"
        android:text="Value"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:textSize="24sp" />

    <Button
        android:id="@+id/readingCancelButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reading_tv"
        android:layout_marginStart="16sp"
        android:layout_alignParentStart="true"
        android:backgroundTint="#F44336"
        android:text="CANCEL"
        android:textSize="16sp" />

    <Button
        android:id="@+id/readingSaveButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reading_tv"
        android:layout_toRightOf="@+id/readingCancelButton"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#2c2c54"
        android:text=" SAVE  "
        android:textSize="16sp" />

    <Button
        android:id="@+id/whenToDriveButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="#2c2c54"
        android:text="When Can I Drive?"
        android:textSize="16sp" />

</RelativeLayout>