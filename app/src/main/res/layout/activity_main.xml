<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ProfilesListActivity">
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            layout="@layout/main_activity_toolbar"
            android:id="@+id/main_toolbar" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="App logo"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/reading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logoImageView"
            android:layout_marginStart="125dp"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/to_profiles_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="View Profiles"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_profiles_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:textSize="18sp"
            android:text="Version 1.2"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>